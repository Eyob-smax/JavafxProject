<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.mfxcore.controls.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vboxContainer" alignment="TOP_CENTER" prefHeight="612.0" prefWidth="606.0" spacing="20" style="-fx-background-color: #f0e8fc;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eyob.ai_project.controller.DisplayController">

    <HBox alignment="CENTER" prefHeight="77.0" prefWidth="606.0" style="-fx-background-color: white;">
        <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Tech Quiz App" />
        </children>
    </HBox>

    <Label fx:id="questionLabel" prefWidth="500" style="-fx-font-size: 18px; -fx-text-fill: #2c2c2c;" wrapText="true" />

    <VBox fx:id="optionsContainer" prefWidth="500" spacing="10" style="-fx-background-color: white; -fx-padding: 15px; -fx-background-radius: 10;" />

    <HBox alignment="CENTER" spacing="20">
        <MFXButton fx:id="prevButton" style="-fx-background-color: #ccccff; -fx-font-size: 15px; -fx-font-weight: bold;" text="Previous" />
        <MFXButton fx:id="nextButton" style="-fx-background-color: #ccccff; -fx-font-size: 15px; -fx-font-weight: bold;" text="Next" />
    </HBox>
   <MFXButton fx:id="back_to_home" onAction="#backToHome" prefHeight="33.0" prefWidth="148.0" style="-fx-background-color: #CA7842; -fx-font-weight: bold;" text="Back">
      <font>
         <Font size="15.0" />
      </font>
      <padding>
         <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
      </padding>
   </MFXButton>

</VBox>
